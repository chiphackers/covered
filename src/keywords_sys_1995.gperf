int lexer_keyword_sys_1995_code(
  const char* str,
  int         length
) { PROFILE(LEXER_KEYWORD_SYS_1995_CODE);

  const struct keyword_sys_1995* rc   = check_identifier_sys_1995(str, length);
  int                            type = S_user;

  if( rc != 0 ) {
    type = rc->type;
    if( type == S_dumpfile ) {
#ifdef TESTMODE
      type = S_ignore;
#else
      type = S_allow;
#endif
    }
  }

  PROFILE_END;

  return( type );

}

