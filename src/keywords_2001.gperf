int lexer_keyword_2001_code( const char* str, int length ) { PROFILE(LEXER_KEYWORD_2001_CODE);

  const struct keyword* rc   = check_identifier_2001(str, length);
  int                   type = IDENTIFIER;

  if( rc != 0 ) {
    type = rc->type;
  }

  return( type );

}

